<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>boardProject</display-name>

	<!-- web.xml은 톰캣과 같은 웹컨테이너가 가동될 때 읽혀짐. 따라서 가동 이후에 
			xml이 변경되면 재가동 해야함
	-->

	<servlet>
		<servlet-name>registServlet</servlet-name>
		<servlet-class>com.sinse.boardproject.controller.RegistServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>registServlet</servlet-name>
		<url-pattern>/notice/regist</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deleteServlet</servlet-name>
		<servlet-class>com.sinse.boardproject.controller.DeleteServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>deleteServlet</servlet-name>
		<url-pattern>/notice/del</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>updateServlet</servlet-name>
		<servlet-class>com.sinse.boardproject.controller.UpdateServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>updateServlet</servlet-name>
		<url-pattern>/notice/update</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>newsRegistServlet</servlet-name>
		<servlet-class>com.sinse.boardproject.news.controller.RegistServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>newsRegistServlet</servlet-name>
		<url-pattern>/news/regist</url-pattern>
	</servlet-mapping>
	

</web-app>